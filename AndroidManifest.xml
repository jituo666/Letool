<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xjt.letool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.xjt.letool.LetoolAppImpl"
        android:allowBackup="true"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/ic_launcher"
        android:restoreAnyVersion="true"
        android:supportsRtl="true" >
        <activity
            android:name="com.xjt.letool.activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/MainTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xjt.letool.activities.ThumbnailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MainTheme" >
        </activity>
        <activity
            android:name="com.xjt.letool.activities.FullImageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MainTheme" >
        </activity>
        <activity
            android:name="com.xjt.letool.activities.SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MainTheme" >
        </activity>

        <provider
            android:name="com.xjt.letool.imagedata.provider.LetoolProvider"
            android:authorities="lt_provider_authories"
            android:exported="true"
            android:multiprocess="false"
            android:permission="com.xjt.letool.data.provider.rw" />
    </application>

</manifest>