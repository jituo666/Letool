<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MainTheme" parent="@android:style/Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- ============================================================================================ -->
    <style name="MyWidget.ActionBarPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/letool_action_bar_height</item>
        <item name="android:background">@color/np_common_bar_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyWidget.ActionBarIconStyle">
        <item name="android:layout_width">@dimen/letool_action_bar_height</item>
        <item name="android:layout_height">@dimen/letool_action_bar_height</item>
        <item name="android:background">@drawable/np_common_pressed_bg</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="MyWidget" parent="@android:style/Theme" />

    <style name="MyWidget.AdapterView">
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="MyWidget.ScrollView" parent="MyWidget.AdapterView">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MyWidget.ListView" parent="MyWidget.AdapterView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/np_list_divider_bg</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="MyWidget.ListViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/letool_sliding_menu_item_height</item>
        <item name="android:padding">@dimen/letool_sliding_menu_side_padding</item>
        <item name="android:background">@drawable/np_common_pressed_bg</item>
    </style>

    <style name="MyWidget.ListViewItem2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/letool_camera_source_settings_item_height</item>
        <item name="android:padding">@dimen/letool_camera_source_settings_item_padding</item>
        <item name="android:background">@drawable/np_common_pressed_bg</item>
    </style>

    <style name="MyWidget.TitleBarTextBase">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#dff1ff</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyWidget.TitleBarText" parent="MyWidget.TitleBarTextBase">
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#f8f8f8</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/common_checkbox</item>
    </style>

</resources>