<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main_toolbar"
    android:orientation="vertical"
    android:paddingTop="12dp" >

    <GridView
        android:id="@+id/texture_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:listSelector="@null"
        android:numColumns="5"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/np_slid_menu_divider_bg" />

    <Button
        android:id="@+id/cancelTexturePick"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/np_common_pressed_bg"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textColor="@color/np_main_text_color_normal"
        android:textSize="18dp" />

</LinearLayout>