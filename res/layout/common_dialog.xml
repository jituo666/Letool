<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlg_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textColor="@color/np_major_text_color"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/np_slid_menu_divider_bg" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:textColor="@color/np_minor_text_color"
        android:textSize="16sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list"
        style="@style/MyWidget.ListView"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/np_slid_menu_divider_bg"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:listSelector="@null"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/np_slid_menu_divider_bg" />

    <LinearLayout
        android:id="@+id/btn_panel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/np_common_pressed_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/common_ok"
            android:textColor="@color/np_main_text_color_normal"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/btn_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/np_slid_menu_divider_bg"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/np_common_pressed_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/common_cancel"
            android:textColor="@color/np_main_text_color_normal"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>