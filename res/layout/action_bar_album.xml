<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_browse"
    style="@style/ActionBarPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/left_natvi"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/action_bar_header_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/sliding_menu_tip"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_sliding_menu_tip" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/left_natvi"
        android:layout_marginLeft="2dp"
        android:gravity="left|center_vertical"
        android:text="@string/app_name"
        android:textSize="20sp" />

</RelativeLayout>