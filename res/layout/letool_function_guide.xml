<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/main_action_bar_bg"
    android:orientation="vertical"
    android:padding="12dp" >

    <TextView
        android:id="@+id/tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/friendly_tips"
        android:textColor="@color/major_text_color"
        android:textSize="@dimen/common_text_size_large" />

    <TextView
        android:id="@+id/tip_cotent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:text="@string/friendly_tip_cotent"
        android:textColor="@color/major_text_color"
        android:textSize="@dimen/common_text_size_middle" />

    <Button
        android:id="@+id/close_tip"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_btn_bkg"
        android:singleLine="true"
        android:text="@string/close_tip"
        android:textColor="@color/major_text_color"
        android:textSize="@dimen/common_text_size_middle" />

</LinearLayout>