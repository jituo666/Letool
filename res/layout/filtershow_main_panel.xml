<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main_toolbar"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:visibility="visible" >

    <FrameLayout
        android:id="@+id/category_panel_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/toolbar_separation_line" />

    <com.xjt.newpic.filtershow.CenteredLinearLayout
        xmlns:custom="http://schemas.android.com/apk/res/com.xjt.newpic"
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_gravity="center|bottom"
        android:orientation="vertical"
        custom:max_width="400dip" >

        <LinearLayout
            style="@style/MyWidget.ActionBarPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fxButton"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="-3dp"
                android:drawableTop="@drawable/filtershow_action_fx_bg"
                android:gravity="center_horizontal"
                android:text="@string/np_edit_fx"
                android:textColor="@drawable/common_filter_action_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/borderButton"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="-3dp"
                android:drawableTop="@drawable/filtershow_action_boder_bg"
                android:gravity="center_horizontal"
                android:text="@string/np_edit_boder"
                android:textColor="@drawable/common_filter_action_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/geometryButton"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="-3dp"
                android:drawableTop="@drawable/filtershow_action_geometry_bg"
                android:gravity="center_horizontal"
                android:text="@string/np_edit_geometry"
                android:textColor="@drawable/common_filter_action_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/colorsButton"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="-3dp"
                android:drawableTop="@drawable/filtershow_action_effect_bg"
                android:gravity="center_horizontal"
                android:text="@string/np_edit_effect"
                android:textColor="@drawable/common_filter_action_color"
                android:textSize="12sp" />
        </LinearLayout>
    </com.xjt.newpic.filtershow.CenteredLinearLayout>

</LinearLayout>