<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siding_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:id="@+id/siding_menu_content"
        android:layout_width="@dimen/letool_sliding_menu_logo_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:background="@color/np_menu_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/siding_menu_logo_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/letool_sliding_menu_logo_height"
            android:scaleType="fitXY"
            android:src="@drawable/sliding_menu_logo_bg" />

        <ListView
            android:id="@+id/sliding_menu_list"
            style="@style/MyWidget.ListView"
            android:divider="@drawable/np_slid_menu_divider_bg" >
        </ListView>
    </LinearLayout>

</RelativeLayout>