<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_action_bar_bg"
    android:orientation="vertical" >

    <include layout="@layout/local_content_view" />

    <FrameLayout
        android:id="@+id/letool_top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/letool_action_bar_height"
        android:layout_gravity="top"
        android:orientation="horizontal" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/letool_bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/letool_bottom_bar_height"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >
    </FrameLayout>

</FrameLayout>