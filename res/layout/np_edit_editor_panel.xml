<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/toolbar_separation_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/controlArea"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <SeekBar
                android:id="@+id/primarySeekBar"
                style="@style/FilterShowSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/np_common_bar_bg"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/cancelFilter"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_gravity="left|center_vertical"
                android:gravity="center"
                android:src="@drawable/ic_menu_cancel_holo_light"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/filtershow_vertical_bar" />

            <LinearLayout
                android:id="@+id/panelAccessoryViewList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/applyEffect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/np_common_pressed_bg"
                    android:drawableRight="@drawable/filtershow_menu_marker_rtl"
                    android:text="@string/apply_effect"
                    android:textColor="@color/np_minor_button_color"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/filtershow_vertical_bar" />

            <ImageButton
                android:id="@+id/applyFilter"
                style="@style/MyWidget.ActionBarIconStyle"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:src="@drawable/ic_menu_done_holo_light"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>