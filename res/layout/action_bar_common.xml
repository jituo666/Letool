<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_normal"
    style="@style/MyWidget.ActionBarPanel" >

    <LinearLayout
        android:id="@+id/action_navi"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_item_bkg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="2dp" >

        <ImageView
            android:id="@+id/action_navi_tip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_previous_item" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <View
        android:id="@+id/sliding_menu_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/action_navi"
        android:background="@drawable/common_action_bar_divider"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/action_camera"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/ic_action_camera" />

    <TextView
        android:id="@+id/navi_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/action_camera"
        android:layout_toRightOf="@id/sliding_menu_divider"
        android:layout_alignWithParentIfMissing="true"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/major_text_color"
        android:textSize="@dimen/letool_action_bar_text_size" />

</RelativeLayout>