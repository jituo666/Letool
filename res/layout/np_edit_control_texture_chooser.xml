<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listTextures"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/draw_texture01"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/draw_texture02"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/draw_texture03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/draw_texture04"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/draw_texture05"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/draw_texture_popupbutton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/np_common_pressed_bg"
        android:src="@drawable/ic_action_overflow" >
    </ImageView>

</LinearLayout>