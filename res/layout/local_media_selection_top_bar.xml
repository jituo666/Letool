<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_selection"
    style="@style/MyWidget.ActionBarPanel">

    <ImageView
        android:id="@+id/selection_finished"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_centerVertical="true"
        android:background="@drawable/np_common_pressed_bg"
        android:src="@drawable/ic_action_accept" />

    <View
        android:id="@+id/selection_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/selection_finished"
        android:background="@drawable/np_panel_divider_bg" />

    <TextView
        android:id="@+id/selection_counter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/selection_divider"
        android:gravity="left|center_vertical"
        android:textColor="@color/np_main_text_color_normal"
        android:textSize="@dimen/letool_action_bar_text_size1" />

    <ImageView
        android:id="@+id/operation_delete"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:src="@drawable/ic_action_delete" />

    <ImageView
        android:id="@+id/operation_multi_share"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/operation_delete"
        android:clickable="false"
        android:src="@drawable/ic_action_share"
        android:visibility="gone" />

</RelativeLayout>