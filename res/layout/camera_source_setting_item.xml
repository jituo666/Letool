<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyWidget.ListViewItem" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/letool_sliding_menu_icon_size"
        android:layout_height="@dimen/letool_sliding_menu_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:scaleType="fitCenter" />

    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/checked"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:singleLine="true" >
    </TextView>

    <TextView
        android:id="@+id/text_path"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/text_count"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/text_count"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/checked"
        android:ellipsize="end"
        android:singleLine="true" >
    </TextView>

</RelativeLayout>