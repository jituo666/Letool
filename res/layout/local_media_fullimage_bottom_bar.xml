<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar"
    style="@style/MyWidget.ActionBarPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/action_edit"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="-3dp"
        android:drawableTop="@drawable/ic_action_edit"
        android:gravity="center_horizontal"
        android:text="@string/common_edit"
        android:textColor="@color/np_minor_button_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/action_share"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="-3dp"
        android:drawableTop="@drawable/ic_action_share"
        android:gravity="center_horizontal"
        android:text="@string/common_share"
        android:textColor="@color/np_minor_button_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/action_detail"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="-3dp"
        android:drawableTop="@drawable/ic_action_info"
        android:gravity="center_horizontal"
        android:text="@string/common_detail"
        android:textColor="@color/np_minor_button_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/action_delete"
        style="@style/MyWidget.ActionBarIconStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="-3dp"
        android:drawableTop="@drawable/ic_action_delete"
        android:gravity="center_horizontal"
        android:text="@string/common_delete"
        android:textColor="@color/np_minor_button_color"
        android:textSize="12sp" />

</LinearLayout>